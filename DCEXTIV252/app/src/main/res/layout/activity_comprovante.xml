<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="32dp"
        tools:context=".ComprovanteActivity">

        <LinearLayout
            android:id="@+id/llContentComprovante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTituloComprovante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Comprovante de atendimento"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tvDetalhesComprovante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                tools:text="Data/Hora: 26/10/2025 - 08:30\n\nDetalhes do Atendimento:\nConvênio: Unimed\nRegião da Dor: Cabeça\nTempo da Dor: Menos de 24h\n\nPrezado(a) paciente..." />

            <TextView
                android:id="@+id/tvSenhaLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Sua Senha:"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSenhaValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/text_primary"
                android:textSize="72sp"
                tools:text="A-123" />


            <Button
                android:id="@+id/btnFecharComprovante"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/option_button_bg"
                android:paddingHorizontal="40dp"
                android:paddingVertical="15dp"
                android:text="Fechar"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>