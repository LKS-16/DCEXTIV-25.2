<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:padding="32dp"
        tools:context=".ConvenioActivity">

        <TextView
            android:id="@+id/tvTituloConvenio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-black"
            android:text="Qual é o seu convênio?"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescricaoConvenio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Selecione o convênio que você possui ou escolha 'Particular' caso não tenha."
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloConvenio" />

        <GridLayout
            android:id="@+id/gridConvenios"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:columnCount="3"
            android:rowCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toTopOf="@id/btnVoltarConvenio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescricaoConvenio">

            <Button
                android:id="@+id/btnConvenioUnimed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/option_button_bg"
                android:drawableTop="@drawable/unimed"
                android:paddingTop="20dp"
                android:tag="unimed" />

            <Button
                android:id="@+id/btnConvenioAmil"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/option_button_bg"
                android:drawableTop="@drawable/amil"
                android:paddingTop="20dp"
                android:tag="amil" />

            <Button
                android:id="@+id/btnConvenioSulamerica"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/option_button_bg"
                android:drawableTop="@drawable/sulamerica"
                android:paddingTop="20dp"
                android:tag="sulamerica" />

            <Button
                android:id="@+id/btnConvenioHapvida"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/option_button_bg"
                android:drawableTop="@drawable/hapvida"
                android:paddingTop="20dp"
                android:tag="hapvida" />

            <Button
                android:id="@+id/btnConvenioParticular"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/option_button_bg"
                android:tag="Particular"
                android:text="Particular"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>


        <Button
            android:id="@+id/btnVoltarConvenio"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_button_bg"
            android:drawableStart="@drawable/voltar"
            android:drawablePadding="8dp"
            android:paddingHorizontal="20dp"
            android:text="Voltar"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>